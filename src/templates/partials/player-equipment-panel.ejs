<div class="tab-pane fade" id="equipment-panel">
    <!-- Equipment Action Buttons -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex gap-2 flex-wrap">
                <button id="equip-best-btn" class="btn btn-primary">
                    <i class="fas fa-arrow-up"></i> <span data-i18n="playerEquipment.equipBest">最強装備</span>
                </button>
                <button id="unequip-all-btn" class="btn btn-secondary">
                    <i class="fas fa-arrow-down"></i> <span data-i18n="playerEquipment.unequipAll">すべて外す</span>
