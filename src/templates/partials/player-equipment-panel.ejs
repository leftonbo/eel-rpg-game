            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <h6 data-i18n="common.armor">防具</h6>
            <div id="armor-selection" class="mb-3">
                <!-- Armor options will be populated here -->
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <h6 data-i18n="common.gloves">手袋</h6>
            <div id="gloves-selection" class="mb-3">
                <!-- Gloves options will be populated here -->
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <h6 data-i18n="common.belt">ベルト</h6>
            <div id="belt-selection" class="mb-3">
                <!-- Belt options will be populated here -->
            </div>
        </div>
    </div>
</div>