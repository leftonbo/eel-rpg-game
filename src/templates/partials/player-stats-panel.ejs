<!-- Stats Panel -->
<div class="tab-pane fade show active" id="stats-panel">
    <div class="row mb-3">
        <div class="col-md-6">
            <h6 data-i18n="playerStats.baseStats">基本ステータス</h6>
            <div class="mb-2"><span data-i18n="common.hp">ヘルス</span>: <span id="detail-max-hp">100</span></div>
            <div class="mb-2"><span data-i18n="common.mp">マナ</span>: <span id="detail-max-mp">40</span></div>
            <div class="mb-2"><span data-i18n="common.attack">攻撃力</span>: <span id="detail-attack">5</span></div>
        </div>
        <div class="col-md-6">
            <h6 data-i18n="playerStats.equipmentEffects">装備効果</h6>
            <div class="mb-2"><span data-i18n="common.armor">防具</span>: +<span id="detail-armor-bonus">0</span> <span data-i18n="common.hp">ヘルス</span></div>
            <div class="mb-2"><span data-i18n="common.belt">ベルト</span>: +<span id="detail-belt-bonus">0</span> <span data-i18n="common.mp">マナ</span></div>
            <div class="mb-2"><span data-i18n="common.weapon">武器</span>: +<span id="detail-weapon-bonus">0</span> <span data-i18n="common.attack">攻撃力</span></div>
            <div class="mb-2"><span data-i18n="common.gloves">手袋</span>: +<span id="detail-gloves-bonus">0</span> <span data-i18n="playerStats.escapePower">拘束脱出力</span></div>
        </div>
    </div>
    
    <h6 data-i18n="playerStats.abilities">アビリティ</h6>
    <div class="row">
        <%- include('../components/ability-card', { icon: '⚔️', name: 'コンバット', nameKey: 'abilities.names.combat', abilityId: 'combat', description: '新しい武器と攻撃スキルをアンロックします。ボスにダメージを与えると経験値が貯まります。', descriptionKey: 'abilities.descriptions.combat' }) %>
        <%- include('../components/ability-card', { icon: '🛡️', name: 'タフネス', nameKey: 'abilities.names.toughness', abilityId: 'toughness', description: '新しい防具と防衛スキルをアンロックします。ヘルスが減ると経験値が貯まります。', descriptionKey: 'abilities.descriptions.toughness' }) %>
        <%- include('../components/ability-card', { icon: '🔧', name: 'クラフトワーク', nameKey: 'abilities.names.craftwork', abilityId: 'craftwork', description: 'アイテムの所持数が増加し、新しいアイテムをアンロックします。アイテムを使用するたびに経験値が貯まります。', descriptionKey: 'abilities.descriptions.craftwork' }) %>
        <%- include('../components/ability-card', { icon: '💪', name: 'エンデュランス', nameKey: 'abilities.names.endurance', abilityId: 'endurance', description: '最大マナが増加します。マナを消費するたびに経験値が貯まります。', descriptionKey: 'abilities.descriptions.endurance' }) %>
        <%- include('../components/ability-card', { icon: '🏃', name: 'アジリティ', nameKey: 'abilities.names.agility', abilityId: 'agility', description: '拘束状態から脱出しやすくなります。拘束から脱出を試みるたびに経験値が貯まります。', descriptionKey: 'abilities.descriptions.agility' }) %>
        <%- include('../components/ability-card', { icon: '🗺️', name: 'エクスプローラー', nameKey: 'abilities.names.explorer', abilityId: 'explorer', description: '探検できる範囲が広がり、新しいボスをアンロックします。記念品を獲得したり、ボスからスキルを受けたりするたびに経験値が貯まります。', descriptionKey: 'abilities.descriptions.explorer' }) %>
    </div>
    
