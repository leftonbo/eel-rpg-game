<!-- Ability Card Component -->
<div class="col-md-6 mb-3">
    <div class="card bg-secondary">
        <div class="card-body">
            <h6 class="card-title">
                <%= icon %> <%= name %> Lv.<span id="<%= abilityId %>-level">0</span>
            </h6>
            <div class="progress mb-2">
                <div id="<%= abilityId %>-progress" class="progress-bar bg-info" role="progressbar" style="width: 0%"></div>
            </div>
            <small class="text-muted">
                経験値: <span id="<%= abilityId %>-exp">0</span> / 
                <span id="<%= abilityId %>-next">100</span>
            </small>
            <% if (locals?.description) { %>
                <p class="mt-2 mb-0 small"><%= description %></p>
            <% } %>
        </div>
    </div>
</div>