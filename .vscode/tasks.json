{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: dev",
      "type": "shell",
      "command": "npm run dev",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "close": true,
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*VITE.*ready",
          "endsPattern": "^\\s*âžœ.*Local:"
        }
      }
    },
    {
      "label": "stop dev server",
      "type": "shell",
      "command": "echo '${input:terminate}'",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "close": true,
        "focus": false,
        "panel": "new"  
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "npm: dev"
    }
  ]
}